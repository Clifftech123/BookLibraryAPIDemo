@page "/login"

<PageTitle> Login </PageTitle>

<h3>Login</h3>

<!-- EditForm component is used to handle form submission and validation -->
<EditForm Model="@user" OnValidSubmit="@HandleValidSubmit">
    <!-- DataAnnotationsValidator component is used to apply data annotation validation rules -->
    <DataAnnotationsValidator />

    <!-- Email field -->
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Email address</label>
        <!-- InputText component is used for input fields, @bind-Value binds the input to the Email property of the user object -->
        <InputText id="exampleInputEmail1" @bind-Value="user.Email" class="form-control" />
    </div>

    <!-- Password field -->
    <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">Password</label>
        <!-- InputText component is used for input fields, @bind-Value binds the input to the Password property of the user object -->
        <InputText id="exampleInputPassword1" @bind-Value="user.Password" type="password" class="form-control" />
    </div>

    <!-- Submit button -->
    <button type="submit" class="btn btn-primary">Submit</button>
</EditForm>

@code {
    // User object to hold form data
    private User user = new User();

    // Method to handle form submission
    private void HandleValidSubmit()
    {
        // Handle form submission here. For example, you can call a service to authenticate the user.
    }

    // Class to represent user data
    public class User
    {
        public string Email { get; set; }
        public string Password { get; set; }
    }
}
