@page "/register"

<PageTitle> Registration </PageTitle>
<h3>Register</h3>

<EditForm Model="@user" OnValidSubmit="@HandleValidSubmit">
    <DataAnnotationsValidator />

    <!-- Username field -->
    <div class="mb-3">
        <label for="exampleInputUsername1" class="form-label">Username</label>
        <InputText id="exampleInputUsername1" @bind-Value="user.Username" class="form-control" />
    </div>

    <!-- Email field -->
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Email address</label>
        <InputText id="exampleInputEmail1" @bind-Value="user.Email" class="form-control" />
        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
    </div>

    <!-- Password field -->
    <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">Password</label>
        <InputText id="exampleInputPassword1" @bind-Value="user.Password" type="password" class="form-control" />
    </div>

    <!-- Submit button -->
    <button type="submit" class="btn btn-primary">Submit</button>
</EditForm>

@code {
    // User object to hold form data
    private User user = new User();

    // Method to handle form submission
    private void HandleValidSubmit()
    {
        // Handle form submission here. For example, you can call a service to register the user.
    }

    // Class to represent user data
    public class User
    {
        public string Username { get; set; }
        public string Email { get; set; }
        public string Password { get; set; }
    }
}
