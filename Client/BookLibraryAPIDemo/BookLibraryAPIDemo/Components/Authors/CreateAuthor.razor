<h3>Create Author</h3>

<EditForm Model="@author" OnValidSubmit="@HandleValidSubmit">
    <DataAnnotationsValidator />

    <!-- Name field -->
    <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <InputText id="name" @bind-Value="author.Name" class="form-control" />
    </div>

    <!-- Email field -->
    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <InputText id="email" @bind-Value="author.Email" class="form-control" />
    </div>

    <!-- Phone number field -->
    <div class="mb-3">
        <label for="phoneNumber" class="form-label">Phone Number</label>
        <InputText id="phoneNumber" @bind-Value="author.PhoneNumber" class="form-control" />
    </div>

    <!-- Submit button -->
    <button type="submit" class="btn btn-primary">Submit</button>
</EditForm>

@code {
    // Author object to hold form data
    private Author author = new Author();

    // Method to handle form submission
    private void HandleValidSubmit()
    {
        // Handle form submission here. For example, you can call a service to create the author.
    }

    // Class to represent author data
    public class Author
    {
        public string Name { get; set; }
        public string Email { get; set; }
        public string PhoneNumber { get; set; }
    }
}
